<%

function _menuItems(categories) {
  let res = '';
  for (const item of categories) {
    if (!item.catalog) {
      res += `<li><a class="category-${item.id}" data-category-name="${item.categoryName}" href="${url('static/articles.html')}?categoryId=${item.id}&categoryName=${item.categoryName}">${item.categoryName}</a></li>`;
    } else if(item.url){
      res += `<li><a class="category-${item.id}" data-category-name="${item.categoryName}" href="${item.url}">${item.categoryName}</a></li>`;
    } else {
      const _items = _menuItems(item.children);
      res += `
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">${item.categoryName} <span class="caret"></span></a>
          <ul class="dropdown-menu">
            ${_items}
          </ul>
        </li>`;
    }
  }
  return res;
}

// categories
if (!site._categories) {
  // categories
  const res = await ctx.performAction({
    method:'post',
    url: '/a/cms/category/tree',
    body: { language:site.language.current,hidden:0 },
  });
  site._categories=res.list;
}
// menu
if(!site._menuItems){
  site._menuItems = _menuItems(site._categories);
}

