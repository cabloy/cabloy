{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/module/**/*",
    "src/module-vendor/**/*",
    "src/suite/**/*",
    "src/suite-vendor/**/*",
    "node_modules/egg-born-*/**/*"
  ],
  "exclude": ["node_modules", "**/dist/**", "**/*.min.js", "backend/cli/templates"]
}
