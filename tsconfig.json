{
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": [
    "src/module/**/*", //
    "src/module-system/**/*",
    "src/module-vendor/**/*",
    "src/suite/**/*",
    "src/suite-vendor/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules", //
    "**/dist/**",
    "**/*.min.js",
    "backend/cli/templates"
  ]
}
